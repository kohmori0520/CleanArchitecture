{
    "version": "0.2.0",
    "configurations": [
        {
            // netcoredbg configuration for Cursor IDE
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Clean.Architecture.Web/bin/Debug/net9.0/Clean.Architecture.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Clean.Architecture.Web",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:57679"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "bash",
                "pipeArgs": ["-c"],
                "debuggerPath": "${env:HOME}/.local/bin/netcoredbg/netcoredbg",
                "debuggerArgs": ["--interpreter=vscode"]
            }
        },
        {
            // Sample ToDo App - netcoredbg configuration
            "name": ".NET Core Launch (Sample ToDo)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/sample/src/NimblePros.SampleToDo.Web/bin/Debug/net9.0/NimblePros.SampleToDo.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/sample/src/NimblePros.SampleToDo.Web",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:57678"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "bash",
                "pipeArgs": ["-c"],
                "debuggerPath": "${env:HOME}/.local/bin/netcoredbg/netcoredbg",
                "debuggerArgs": ["--interpreter=vscode"]
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}